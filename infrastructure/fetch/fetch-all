if [ "${FETCH_MANUALLY}" = "Yes" ]
then
	exit 0
fi

file=`basename $1`
dir=`dirname $1`
mkdir -p $dir
oldd=$PWD

cd $dir

for site in ${SITES}
do
	if ${FETCH_CMD:-ftp} ${site}$file
	then
		echo -n "$site: "
		cd $oldd

		if [ -z "${CHECK}" ]
		then
			echo "$file: NO CHECKSUM"
			exit 0
		fi

		if echo "${CHECK}" | cksum -c
		then
			exit 0
		else
			cd $dir
			rm -f $1
		fi
	fi
done
echo "Fetch, no good distfile: $@, notify ${MAINTAINER}"
exit 1
