use strict;
use warnings;
use Fcntl;
use File::Basename;

if (@ARGV != 1) {
	exit(1);
}
my $fname = shift;
my $dname = dirname $fname;
my $done = 0;

unless (-d $dname) {
	require File::Path;
	File::Path::mkpath($dname);
}

while(1) {
	if (sysopen my $handle, $fname, O_WRONLY | O_EXCL | O_CREAT, 0666) {
		close($handle);
		exit(0);
	}
	unless ($done) {
		print STDERR "Awaiting lock $fname\n";
		$done = 1;
	}
	sleep(1);
}
