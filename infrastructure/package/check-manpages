# check all manpages in existing packages

: ${PORTSDIR=/usr/ports}
: ${ARCH=`uname -m`}
: ${PACKAGES=${PORTSDIR}/packages/${ARCH}/All}

rm -rf man
for i in ${PACKAGES}/*
do
# avoid  `unmatched' error
	tar zxf $i man/\* 2>/dev/null
done
/usr/libexec/makewhatis -p man
