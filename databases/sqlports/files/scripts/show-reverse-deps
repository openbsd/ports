# compute reverse dependencies
# XXX this is not perfect yet! it *does* require collating lib-depends over
# multi-packages setup, which this is NOT doing yet, but it is close to
# actually doing it.
# we just require a few more views for that.

usage="Usage: show-reverse-deps [-ft] [-d sqlite_db] pkgpath"
args=`getopt d:ft $*`
if [ $? -ne 0 ]
then
    echo 2>&1 $usage
fi
set -e

db=${TRUEPREFIX}/share/sqlports
type="type!=3"
fuzzy=false

set -- $args
while [ $# -ne 0 ]
do
	case "$1" in
		-t)
			type=true
			shift
			;;
		-f)
			fuzzy=true
			shift
			;;
		-d)
			db="$2"
			shift
			shift
			;;
		--)
			shift
			break
			;;
	esac
done

if [ $# -ne 1 ]
then
	echo 2>&1 $usage
	exit 1
fi

if $fuzzy
then
	query="p2.fullpkgpath like \"%$1%\""
else
	query="p2.fullpkgpath=\"$1\""
fi

sqlite3 "$db" <<EOSQL
with recursive d (fullpkgpath, dependspath) as
	(select root.fullpkgpath, root.dependspath 
		from _canonical_depends root
			join _paths 
			    on root.dependspath=_paths.canonical
			join _paths p2 
			    on $query and p2.id=_paths.pkgpath
			where $type
	    union
	    select child.fullpkgpath, child.dependspath
	    from d parent, _canonical_depends child  
	    	where parent.fullpkgpath=child.dependspath and $type)
select distinct(_paths.fullpkgpath) from d 
    join _paths 
	on _paths.id=d.fullpkgpath
order by _paths.fullpkgpath;
EOSQL
