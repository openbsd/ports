#!/bin/ksh
#
# $OpenBSD: xl2tpd.rc,v 1.3 2018/01/11 19:27:08 rpe Exp $

daemon="${TRUEPREFIX}/sbin/xl2tpd"
daemon_user="_xl2tpd"

. /etc/rc.d/rc.subr

rc_pre() {
	/usr/bin/install -d -o ${daemon_user} /var/run/xl2tpd
	[ -p /var/run/xl2tpd/l2tp-control ] ||
	    mkfifo /var/run/xl2tpd/l2tp-control
}

rc_cmd $1
