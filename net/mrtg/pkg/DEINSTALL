#!/bin/sh
# $OpenBSD: DEINSTALL,v 1.4 2000/07/19 09:31:21 brad Exp $
#
# mrtg de-installation

set -e
PATH=/bin:/usr/bin:/sbin:/usr/sbin
PREFIX=${PKG_PREFIX:-/usr/local}
CONFIG_FILE=/etc/mrtg.cfg

if [ -f /usr/lib/perl5/site_perl/BER.pm ]; then
    rm -f /usr/lib/perl5/site_perl/locales_mrtg.pm
    rm -f /usr/lib/perl5/site_perl/BER.pm
    rm -f /usr/lib/perl5/site_perl/SNMP_Session.pm
    rm -f /usr/lib/perl5/site_perl/SNMP_util.pm
fi

if [ -f /usr/local/libdata/perl5/site_perl/BER.pm ]; then
    rm -f /usr/local/libdata/perl5/site_perl/locales_mrtg.pm
    rm -f /usr/local/libdata/perl5/site_perl/BER.pm
    rm -f /usr/local/libdata/perl5/site_perl/SNMP_Session.pm
    rm -f /usr/local/libdata/perl5/site_perl/SNMP_util.pm
fi

if [ -f ${CONFIG_FILE} ]; then
    echo
    echo "+---------------"
    echo "| To completely deinstall the $1 package you need to perform"
    echo "| this step as root:"
    echo "|"
    echo "|           rm -f ${CONFIG_FILE}"
    echo "|"
    echo "| Do not do this if you plan on re-installing $1"
    echo "| at some future time."
    echo "+---------------"
    echo
fi

exit 0
