 int riscv_simd_caps(void) {
   int flags = 0;
 #if HAVE_RVV
+#ifdef __OpenBSD__
+  unsigned long hwcap = 0;
+  elf_aux_info(AT_HWCAP, &hwcap, sizeof(hwcap));
+#else
   unsigned long hwcap = getauxval(AT_HWCAP);
+#endif
   if (hwcap & HWCAP_RVV) flags |= HAS_RVV;
 #endif
   return flags;
