COMMENT-main =	set of fonts designed to complement Source Sans Pro
COMMENT-web =	set of (web)fonts designed to complement Source Sans

ADOBE_PROJECT =		source-serif
ADOBE_TAGNAME =		${MODFONT_VERSION}R

MULTI_PACKAGES =	-main -web

MODFONT_VERSION =	4.005

DISTFILES =	source-serif-${MODFONT_VERSION}_Desktop.zip \
		source-serif-${MODFONT_VERSION}_WOFF2.zip

MODFONT_FONTFILES =	source-serif-${MODFONT_VERSION}_Desktop/OTF/*.otf \
			source-serif-${MODFONT_VERSION}_Desktop/TTF/*.ttf \
			source-serif-${MODFONT_VERSION}_Desktop/VAR/*.otf
MODFONT_WEBFILES =	source-serif-${MODFONT_VERSION}_WOFF2/*/*.woff2

.include <bsd.port.mk>
