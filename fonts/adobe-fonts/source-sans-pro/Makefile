COMMENT-main =	set of OpenType fonts designed for user interfaces
COMMENT-web =	set of OpenType (web)fonts designed for user interfaces

ADOBE_PROJECT =		source-sans
ADOBE_TAGNAME =		${MODFONT_VERSION}R

MULTI_PACKAGES =	-main -web

MODFONT_VERSION =	3.052

DISTFILES =	OTF-source-sans-${MODFONT_VERSION}R.zip \
		TTF-source-sans-${MODFONT_VERSION}R.zip \
		VF-source-sans-${MODFONT_VERSION}R.zip \
		WOFF2-source-sans-${MODFONT_VERSION}R.zip

MODFONT_FONTFILES =	OTF/*.otf \
			TTF/*.ttf \
			VF/*.otf
MODFONT_WEBFILES =	WOFF2/*/*.woff2

.include <bsd.port.mk>
