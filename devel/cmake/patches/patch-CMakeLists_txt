   CMAKE_HANDLE_SYSTEM_LIBRARIES()
   
+  IF($ENV{LOCALBASE})
+    SET(OPENBSD_LOCALBASE $ENV{LOCALBASE})
+  ELSE($ENV{LOCALBASE})
+    SET(OPENBSD_LOCALBASE /usr/local)
+  ENDIF($ENV{LOCALBASE})
+
+  # to find expat and curl
+  LINK_DIRECTORIES("${OPENBSD_LOCALBASE}/lib")
+
