 #error "Unsupported host arch"
 #endif
 
+	// Set the host capabilities to match the guest as defined
+	// in vex_prepare_vai().
+	vai_host.hwcaps = 0xf60;
+
 	vta.archinfo_host = vai_host;
 
 	//
