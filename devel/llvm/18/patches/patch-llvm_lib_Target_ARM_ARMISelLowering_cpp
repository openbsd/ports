 bool ARMTargetLowering::useLoadStackGuardNode() const {
+  if (Subtarget->getTargetTriple().isOSOpenBSD())
+    return false;
   // ROPI/RWPI are not supported currently.
   return !Subtarget->isROPI() && !Subtarget->isRWPI();
 }
