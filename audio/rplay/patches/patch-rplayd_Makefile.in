--- rplayd/Makefile.in.orig	Wed Jun  9 08:27:43 1999
+++ rplayd/Makefile.in	Sun May 16 15:02:49 2010
@@ -1,8 +1,9 @@
 include @RPLAY_TOP@/Makefile.config
+bindir= $(exec_prefix)/sbin
 
