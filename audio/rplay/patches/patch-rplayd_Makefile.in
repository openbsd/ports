 VPATH = @srcdir@
-sysconfdir = @sysconfdir@
+sysconfdir = @sysconfdir@/rplay
 
 INSTALL = @INSTALL@
 INSTALL_PROGRAM = @INSTALL_PROGRAM@
@@ -11,7 +12,7 @@ MKINSTALLDIRS= @srcdir@/../mkinstalldirs
 
 CPPFLAGS = $(CC_OPTIONS) -I. -I../include -I${srcdir} -I${srcdir}/../include \
