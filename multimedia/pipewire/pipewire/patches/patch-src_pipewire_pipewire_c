+
+SPA_EXPORT
+unsigned int pw_if_nametoindex(const char *ifname, int fd)
+{
+#ifdef SIOCGIFINDEX
+	struct ifreq ifr;
+	snprintf(req.ifr_name, sizeof(req.ifr_name), "%s", ifname);
+	if (ioctl(fd, SIOCGIFINDEX, &ifr) < 0)
+		return -1;
+	return ifr.ifr_ifindex;
+#else
+	int res;
+	if ((res = if_nametoindex(ifname)) == 0)
+		return -1;
+	return res;
+#endif
 }
