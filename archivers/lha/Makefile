DISTNAME=	lha-114f
PKGNAME=	lha-1.14f
NEED_VERSION=	1.301
CATEGORIES=	archivers
MASTER_SITES=	http://www2m.biglobe.ne.jp/~dolphin/lha/prog/ \
		ftp://ftp.win.ne.jp/pub/misc/

MAINTAINER=	Angelos D. Keromytis <angelos@openbsd.org>

PERMIT_PACKAGE_CDROM=	Yes
PERMIT_PACKAGE_FTP=	Yes
PERMIT_DISTFILES_CDROM=	Yes
PERMIT_DISTFILES_FTP=	Yes

MAKE_FLAGS=	CC="${CC}" OPTIMIZE="${CFLAGS}" \
		MACHINE="-DSYSTIME_HAS_NO_TM -DSYSV_SYSTEM_DIR -DMKTIME -DUSESTRCASECMP" \
		SWITCHES="-DNEED_INCREMENTAL_INDICATOR -DEUC -DSUPPORT_LH6"
FAKE_FLAGS=	BINDIR='$${PREFIX}/bin' MANDIR='$${PREFIX}/man/ja_JP.EUC' \
		MANSECT="1" INSTALL="" INSTALLBIN="${INSTALL_PROGRAM}" \
		INSTALLMAN="${INSTALL_MAN}"

MANLANG=	ja_JP.EUC

.include <bsd.port.mk>
