+/*
+ * Purge the modem output queue of all characters
+ */
+purgeout()
+{
+#ifdef __FreeBSD__ 
+	fpurge(Ttystream);
+#else
+	rewind(Ttystream);
+#endif
+#ifdef  POSIX
+	tcflush(Tty, TCOFLUSH);
+#else
+#ifdef	TCFLSH
+	ioctl(Tty, TCFLSH, 1);
+#else
+#ifdef TIOCFLUSH
+       {static int fwrite = 2; 
+       ioctl(Tty, TIOCFLUSH, &fwrite);
+       }
+#endif
+#endif
+#endif
