+"proc sendqueue {} {\n"
+"    global KeyQueue\n"
+"    global KeyQueueId\n"
+"    if {[string length $KeyQueue] > 0} {\n"
+"	key [string index $KeyQueue 0]\n"
+"	set KeyQueue [string range $KeyQueue 1 end]\n"
+"    }\n"
+"    set KeyQueueId {}\n"
+"    if {[string length $KeyQueue] > 0} { readyqueue }\n"
+"}\n"
