 						this.NoDelay = false;
-				} else if (addressFamily == AddressFamily.InterNetworkV6) {
+				} else if (addressFamily == AddressFamily.InterNetworkV6 && !Platform.IsOpenBSD) {
 					this.DualMode = true;
 				}
 
