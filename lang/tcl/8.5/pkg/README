+3		/usr/{share,X11R6,local,local/lib/tcl/{tcl,tk}8.5}/man/{cat,man}3
 3F		/usr/local/man/{cat,man}3f
 3f		/usr/local/man/{cat,man}3f
 3P		/usr/{share,local}/man/{cat,man}3p
