#!/bin/sh

cd $WRKSRC || exit 1

cat >> Makefile << END

all: freebsd

install:
	cp xevil \$(PREFIX)/bin
	mkdir -p \$(PREFIX)/lib/app-defaults
	for f in iris mac sun3 sun4_sparc; do \
	  cp app-defaults/XEvil.\$\$f \$(PREFIX)/lib/X11/app-defaults/; done
	install -c -m 444 -o bin -g bin xevil.6 \$(PREFIX)/man/man6/xevil.6

END

exit 0
