+CXX=c++
+CXX_FLAGS += ${CXXFLAGS} -fPIC -std=c++11 -I${LOCALBASE}/include
+LD_FLAGS += -shared -L${LOCALBASE}/lib -lprotobuf-lite
 LIBRARY_NAME=libsteam_api.so
 RM = rm -f
 
