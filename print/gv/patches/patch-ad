+                         # C2,           1298    1837    \\n\\
+                         # C3,           918     1296    \\n\\
+                         # C4,           649     918     \\n\\
+                         # C5,           459     649     \\n\\
+                         # C6,           323     459     \\n\\
+                         # C7,           230     323     \\n\\
+                         # DL,           312     624
+ GV.magMenu:             2,      2       \\n\\
+                         4,      4       \\n\\
+                         8,      8       \\n\\
+                         16,     16      \\n\\
+                         32,     32      \\n\\
+                         64,     64
+ GV*Ghostview.background:                white
+ GV*Ghostview.foreground:                black
+ GV.gsInterpreter:       gs
+ GV.gsCmdScanPDF:        gs -dNODISPLAY -dQUIET -sPDFname=%s -sDSCname=%s pdf2dsc.ps -c quit
+ GV.gsCmdConvPDF:        gs -dNODISPLAY -dQUIET  -dNOPAUSE -sPSFile=%s %s -c quit
